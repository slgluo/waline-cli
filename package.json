{
  "name": "waline-cli",
  "version": "1.0.2",
  "description": "cli for waline independent deployment",
  "keywords": [
    "waline"
  ],
  "homepage": "https://github.com/slgluo/waline-cli#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/slgluo/waline-cli.git"
  },
  "license": "MIT",
  "author": "slgluo",
  "main": "index.js",
  "bin": {
    "waline": "./bin/index.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "lint": "pnpm lint:prettier && pnpm lint:eslint",
    "lint:eslint": "eslint --ext .js,.ts --fix .",
    "lint:prettier": "prettier --check --write .",
    "prepare": "husky install",
    "release": "pnpm release:check && pnpm release:version && pnpm release:publish",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:check": "pnpm lint",
    "release:publish": "pnpm publish --tag latest",
    "release:version": "bumpp package.json --execute=\"pnpm release:changelog\" --commit --all"
  },
  "lint-staged": {
    "*.{md,json,js}": [
      "prettier --write"
    ],
    "*.{json,js}": [
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@waline/vercel": "^1.21.0",
    "colors": "^1.4.0",
    "commander": "^9.4.0",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.0.1",
    "import-local": "^3.1.0",
    "inquirer": "^8.0.0",
    "mysql": "^2.18.1",
    "npmlog": "^6.0.2",
    "path-exists": "^5.0.0",
    "pm2": "^5.2.0",
    "root-check": "^2.0.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "bumpp": "^8.2.1",
    "commitizen": "^4.2.5",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sort-package-json": "^1.57.0",
    "standard-version": "^9.5.0",
    "typescript": "^4.8.2"
  },
  "packageManager": "pnpm@7.9.5"
}
